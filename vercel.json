{
  "version": 2,
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/categories",
      "destination": "/api/categories"
    },
    {
      "source": "/categories/",
      "destination": "/api/categories"
    },
    {
      "source": "/categories/:slug",
      "destination": "/category.html"
    },
    {
      "source": "/categories/:slug/",
      "destination": "/category.html"
    },
    {
      "source": "/c/:id/:slug",
      "destination": "/creator.html?id=:id"
    },
    {
      "source": "/:username([a-zA-Z0-9_.-]+)",
      "destination": "/api/creator/:username"
    }
  ],
  "redirects": [
    {
      "source": "/category",
      "destination": "/categories",
      "permanent": true
    },
    {
      "source": "/category/",
      "destination": "/categories/",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "index, follow"
        }
      ]
    }
  ]
}

