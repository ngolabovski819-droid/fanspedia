{
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/categories", "destination": "/categories.html" },
    { "source": "/categories/", "destination": "/categories.html" },
    { "source": "/categories/:slug", "destination": "/category.html" },
    { "source": "/categories/:slug/", "destination": "/category.html" },
    { "source": "/categories/:slug/page/:page", "destination": "/category.html?page=:page" }
  ],
  "redirects": [
    { "source": "/category", "destination": "/categories", "permanent": true },
    { "source": "/category/", "destination": "/categories/", "permanent": true },
    { "source": "/categories/big-butt", "destination": "/categories/big-ass", "permanent": true },
    { "source": "/categories/booty", "destination": "/categories/big-ass", "permanent": true }
  ],
  "headers": [
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400, must-revalidate"
        },
        {
          "key": "X-Robots-Tag",
          "value": "noindex"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "index, follow"
        }
      ]
    }
  ]
}
