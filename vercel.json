{
  "version": 2,
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/sitemap.xml", "destination": "/sitemap.xml" },
    { "source": "/robots.txt", "destination": "/robots.txt" },
    { "source": "/categories", "destination": "/categories.html" },
    { "source": "/categories/", "destination": "/categories.html" },
    { "source": "/categories/:slug", "destination": "/category.html" },
    { "source": "/categories/:slug/", "destination": "/category.html" }
  ],
  "redirects": [
    { "source": "/creator.html", "destination": "/", "permanent": false },
    { "source": "/c/:id/:slug", "destination": "/", "permanent": false },
    { "source": "/:username(.*\\..*)", "destination": "/", "permanent": false },
    { "source": "/:username([a-zA-Z0-9_-]+)", "destination": "/", "permanent": false },
    { "source": "/api/creator/:username", "destination": "/api/disabled", "permanent": false }
  ],
  "headers": [
    {
      "source": "/index.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, must-revalidate" }
      ]
    },
    {
      "source": "/categories.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, must-revalidate" }
      ]
    },
    {
      "source": "/category.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, must-revalidate" }
      ]
    },
    {
      "source": "/creator.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, must-revalidate" }
      ]
    },
    {
      "source": "/config/categories.js",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, must-revalidate" }
      ]
    },
    {
      "source": "/(.*)\\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ]
}